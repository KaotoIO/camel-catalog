{
  "name": "camel-catalog",
  "version": "2.7.0-dev",
  "description": "The Camel Catalog for the Kaoto project",
  "repository": "https://github.com/KaotoIO/camel-catalog",
  "author": "The Kaoto Team",
  "license": "Apache License v2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "copy-catalog": "rsync -a --delete packages/camel-catalog/dist/camel-catalog/ catalog/",
    "build": "yarn workspace @kaoto/camel-catalog run build && yarn copy-catalog",
    "publish": "lerna publish"
  },
  "engines": {
    "node": ">=18.x"
  },
  "devDependencies": {
    "@lerna-lite/cli": "^3.0.0",
    "@lerna-lite/publish": "^3.0.0",
    "@lerna-lite/version": "^3.0.0"
  },
  "packageManager": "yarn@4.5.0"
}
